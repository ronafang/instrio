{
    "manifest_version": 2,
    "name": "Your Extension Name",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "background",
        "tabCapture",
        "https://api.instr.io/"
    ],
    "background": {
        "scripts": ["background.js", "RecordRTC.js"],
        "persistent": false
    },

    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Your Extension Title"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
